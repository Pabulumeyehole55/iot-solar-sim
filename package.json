    "mqtt": "^5.3.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "csv-writer": "^1.6.0",
    "date-fns": "^3.0.6",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.8",
